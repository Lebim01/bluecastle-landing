    "cross-env": "^7.0.3",
    "dayjs": "^1.11.18",
    "dotenv": "16.4.7",
    "echarts": "^6.0.0",
    "embla-carousel": "^8.6.0",
    "embla-carousel-auto-scroll": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.12",
    "geist": "^1.5.1",
    "graphql": "^16.11.0",
